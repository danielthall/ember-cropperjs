<img
  id={{concat 'image-cropper-' elementId}}
  class='max-w-full'
  src={{source}}
  alt={{alt}}>

{{#if _cropper}}
  {{yield
    (hash
      cropper=_cropper
      call=(component 'image-cropper-call' obj=_cropper)
      on=(component 'image-cropper-on' cropper=_cropper eventSource=_cropper.element)
    )
  }}
{{/if}}
